import os
import sys
import PaPi.utils


if __name__ == '__main__':
    import argparse

    parser = argparse.ArgumentParser(description='Set output directory in a RUNINFO.cp that was transfered from another computer')
    parser.add_argument('runinfo_dict_path', metavar = 'RUNINFO_DICT',
                        help = 'RUNINFO.cp generated by PaPi profiler')

    args = parser.parse_args()

    try:
        sys.exit(PaPi.utils.reset_output_dir(args.runinfo_dict_path))
    except PaPi.utils.ConfigError, e:
        print e
        sys.exit(-1)
