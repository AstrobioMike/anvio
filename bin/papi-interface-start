import webbrowser
from bottle import route, run, static_file, redirect, request

@route('/')
def redirect_to_app():
	redirect('/app/index.html')

@route('/app/:filename#.*#')
def send_static(filename):
    return static_file(filename, root='../static/')

@route('/data/<name>')
def send_data(name):
	if name == "tree":
		return static_file("TREE.txt", root='./')
	elif name == "meta":
		return static_file("asd.txt", root='./')

@route('/submit', method='POST')
def get_data():
	print request.forms.get('groups')



if __name__ == "__main__":
	webbrowser.open_new("http://127.0.0.1:8080")
	run(host='127.0.0.1', port=8080, quiet=True)

