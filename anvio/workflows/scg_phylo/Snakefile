    params:
        state_file = os.path.join("SCG_WORKFLOW", "{ribosomal_protein_name}_SCG_WORKFLOW_state.json"),
        profileDB = os.path.join("METAGENOMICS_WORKFLOW/06_MERGED", "{ribosomal_protein_name}", "PROFILE.db")
    output: touch(os.path.join("{ribosomal_protein_name}_state_imported.done"))
    threads: M.T('cat_misc_data_to_one_file')
    shell:
        """
        anvi-import-state -p {params.profileDB} \
                          -s {params.state_file} \
                          -n {wildcards.ribosomal_protein_name}
        """
