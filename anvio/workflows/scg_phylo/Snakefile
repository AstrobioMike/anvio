rule combine_data:
    """Joins read recruitment and taxonomy data for interactive interface"""

    version: 1.0
    log: os.path.join(dirs_dict['LOGS_DIR'], "combine_data_{ribosomal_protein_name}.log")
    input:
        done = os.path.join("METAGENOMICS_WORKFLOW/07_SUMMARY", "{ribosomal_protein_name}_summarize.done"),
    output: touch(os.path.join("{ribosomal_protein_name}_combined.done"))
    threads: M.T('cat_misc_data_to_one_file')
    shell:
        """
        script=$(which anvi-self-test | sed 's|bin/anvi-self-test|anvio/workflows/scg_phylo/scripts/bind_taxa_coverage.R|')

        Rscript "$script" --SCG {wildcards.ribosomal_protein_name} \
                          --ribophylopath SCG_WORKFLOW \
                          --profilepath METAGENOMICS_WORKFLOW &> {log}
        """

rule anvi_import_state:
    """Import state file for interactive interface"""

    version: 1.0
